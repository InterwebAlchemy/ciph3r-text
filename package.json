{
  "name": "@interwebalchemy/ciph3r-text",
  "type": "module",
  "version": "0.0.1",
  "description": "A React component for visually encoding and decoding text.",
  "license": "MIT",
  "engines": {
    "node": ">=23.0.0",
    "npm": ">=11.0.0",
    "bun": ">=1.2.4"
  },
  "author": {
    "name": "Interweb Alchemy",
    "url": "https://interwebalchemy.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/InterwebAlchemy/ciph3r-text.git"
  },
  "bugs": {
    "url": "https://github.com/InterwebAlchemy/ciph3r-text/issues"
  },
  "homepage": "https://github.com/InterwebAlchemy/ciph3r-text/",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/types"
  ],
  "keywords": [
    "react-component",
    "text",
    "text encoding",
    "text decoding",
    "text transformation",
    "text animation",
    "text visualization"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "bun run lint:types && bun run clean",
    "build": "bun run build:rollup",
    "build:rollup": "rollup -c",
    "dev": "bun run storybook",
    "lint:eslint": "eslint .",
    "lint:format": "bun exec prettier . --check",
    "lint:fix": "bun exec prettier . --write",
    "lint:types": "tsc --noEmit",
    "pretest": "bun run lint",
    "prepare": "is-ci || husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "package.json": "scriptlint --fix",
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "rollup": "^4.34.9",
    "rollup-plugin-dts": "^6.1.1",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@commitlint/config-conventional": "^19.7.1",
    "@storybook/addon-essentials": "^8.6.3",
    "@storybook/addon-interactions": "^8.6.3",
    "@storybook/addon-onboarding": "^8.6.3",
    "@storybook/blocks": "^8.6.3",
    "@storybook/react": "^8.6.3",
    "@storybook/react-vite": "^8.6.3",
    "@storybook/test": "^8.6.3",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.21.0",
    "eslint-config-love": "^118.0.0",
    "eslint-plugin-storybook": "^0.11.3",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "scriptlint": "^3.0.0",
    "storybook": "^8.6.3",
    "typescript": "latest"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
